<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="15dp"
        android:background="@color/colorWhite"
        android:padding="15dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:id="@+id/ll_order_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/constants_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="联系人:苹果"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/book_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/shijian_icon"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="2017-12-23 23:03:00" />

                <TextView
                    android:id="@+id/use_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/renshu_icon"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="5人" />

                <TextView
                    android:id="@+id/remark_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="备注:镂空" />
            </LinearLayout>

            <ImageView
                android:id="@+id/order_state_im"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/orderview_icon_no" />

        </LinearLayout>

        <TextView
            android:id="@+id/is_ordering_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="未点餐"
            android:textColor="@color/app_color" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/call_custom_btn"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/ova_tra_line"
            android:padding="5dp"
            android:text="联系客户"
            android:textColor="@color/app_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/refuse_order_btn"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ova_line_white"
            android:padding="5dp"
            android:text="拒单"
            android:textColor="@color/app_color"
            android:textSize="14sp" />

        <Button
            android:id="@+id/receive_order_btn"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ova_bg_app_color"
            android:padding="5dp"
            android:text="接单"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>