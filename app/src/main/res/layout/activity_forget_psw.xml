<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/app_color"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="back">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_arrow_black"
                android:tint="@color/colorWhite" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="找回密码"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="手机号　　"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/forget_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/colorWhite"
            android:gravity="center|left"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        style="@style/lineViewStyle"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="验证码　　"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/sms_code_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center|left"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textSize="13sp" />

        <Button
            android:id="@+id/get_code_btn"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@drawable/ova_bg_app_color"
            android:text="获取验证码"
            android:textColor="@color/colorWhite"
            android:textSize="10sp" />
    </LinearLayout>

    <View
        style="@style/lineViewStyle"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="输入新密码"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/forget_psw_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/colorWhite"
            android:gravity="center|left"
            android:hint="请输入6-20位新密码"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        style="@style/lineViewStyle"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="确认新密码"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/forget_psw_again_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/colorWhite"
            android:gravity="center|left"
            android:hint="请确认新密码"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/forget_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/ova_bg_app_color"
        android:text="找回密码"
        android:textColor="@color/colorWhite"
        android:textSize="13sp" />

    <com.wbx.merchant.widget.ColorTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="小提示：请输入您认证过的手机号，点击“获取新密码”按钮后系统会将新密码发送到您的认证手机上"
        android:textSize="10sp"
        android:visibility="gone"
        app:color_arrays="#f15353"
        app:color_texts="小提示：" />
</LinearLayout>