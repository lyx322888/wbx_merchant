<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/back_ground_color"
    android:layout_height="match_parent"
    tools:context=".fragment.ItemCsxqFragment">
    <com.flyco.roundview.RoundLinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ll_cs_tj"
        android:layout_marginHorizontal="15dp"
        android:gravity="center_horizontal"
        android:padding="25dp"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="5dp"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:text="总出售张数"
                android:textColor="@color/gray89"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_num"
                android:layout_gravity="center"
                android:text="888"
                android:textSize="25sp"
                android:textColor="@color/app_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:text="总出售金额(元)"
                android:textColor="@color/gray89"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_gravity="center"
                android:text="888"
                android:textSize="25sp"
                android:textColor="@color/app_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:text="总退款额(元)"
                android:textColor="@color/gray89"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_tk_price"
                android:layout_gravity="center"
                android:text="888"
                android:textSize="25sp"
                android:textColor="@color/app_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </com.flyco.roundview.RoundLinearLayout>

    <com.flyco.roundview.RoundLinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ll_sy_tj"
        android:layout_marginHorizontal="15dp"
        android:gravity="center_horizontal"
        android:padding="25dp"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="5dp"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:text="总使用张数"
                android:textColor="@color/gray89"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_use_all_num"
                android:layout_gravity="center"
                android:text="888"
                android:textSize="25sp"
                android:textColor="@color/app_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:text="总收入金额(元) "
                android:textColor="@color/gray89"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_all_income_money"
                android:layout_gravity="center"
                android:text="888"
                android:textSize="25sp"
                android:textColor="@color/app_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </com.flyco.roundview.RoundLinearLayout>

    <com.flyco.roundview.RoundLinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        app:rv_cornerRadius="5dp"
        android:layout_marginHorizontal="15dp"
        app:rv_backgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_cs"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/title_color"
                android:gravity="center"
                android:layout_weight="3"
                android:text="购买人"
                android:textSize="13sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/title_color"
                android:gravity="center"
                android:layout_weight="3"
                android:text="购买时间"
                android:textSize="13sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/title_color"
                android:gravity="center"
                android:layout_weight="2"
                android:text="购买张数"
                android:textSize="13sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/title_color"
                android:gravity="center"
                android:layout_weight="2"
                android:text="购买金额"
                android:textSize="13sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_sy"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/title_color"
                android:gravity="center"
                android:layout_weight="3"
                android:text="使用人"
                android:textSize="13sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/title_color"
                android:gravity="center"
                android:layout_weight="3"
                android:text="使用时间"
                android:textSize="13sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/title_color"
                android:gravity="center"
                android:layout_weight="4"
                android:text="收入金额"
                android:textSize="13sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            style="@style/v_fgx"/>

        <com.wbx.merchant.widget.refresh.PullToRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_sjtj"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
        </com.wbx.merchant.widget.refresh.PullToRefreshLayout>

    </com.flyco.roundview.RoundLinearLayout>
</LinearLayout>