<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#90FFFFFF"
    android:gravity="bottom|center_horizontal">

    <TextView
        android:id="@+id/product_library_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/round_bg_red"
        android:gravity="center"
        android:text="产品库"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/release_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/round_bg_red"
        android:gravity="center"
        android:text="发布产品"
        android:textColor="@color/colorWhite" />

    <ImageView
        android:id="@+id/close_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_library_btn"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="78dip"
        android:src="@drawable/tabbar_compose_background_icon_close" />
</RelativeLayout>