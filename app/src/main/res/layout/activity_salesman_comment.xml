<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/back_ground_color"
    tools:context=".activity.SalesmanCommentActivity">
    <!--标题栏-->
    <LinearLayout
        style="@style/TitleBarStyle"
        android:background="@color/back_ground_color"
       >
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="back">

            <ImageView
                style="@style/BackStyle"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                 />
        </RelativeLayout>

        <TextView
            style="@style/TitleStyle"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:text="评价销售代理"
             />

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp" />
    </LinearLayout>
    <!--content-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="13dp"
                android:background="@drawable/selesman_comment_bc"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <!--头像那一栏-->
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.wbx.merchant.widget.CircleImageView
                        android:id="@+id/civ_selesman_head_p"
                        android:layout_width="52dp"
                        android:layout_height="52dp"/>
                    <!--用户名  星星-->
                    <LinearLayout
                        android:layout_toRightOf="@id/civ_selesman_head_p"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:layout_height="46dp">
                       <LinearLayout
                           android:orientation="horizontal"
                           android:layout_width="wrap_content"
                           android:gravity="bottom"
                           android:layout_height="wrap_content">
                           <TextView
                               android:id="@+id/tv_name"
                               android:text="用户名"
                               android:maxLines="1"
                               android:textColor="#ff2c2c2c"
                               android:textSize="15sp"
                               android:ellipsize="end"
                               android:maxWidth="100dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>
                           <ImageView
                               android:layout_marginLeft="2dp"
                               android:src="@drawable/ic_xsdl"
                               android:scaleType="fitCenter"
                               android:layout_width="50dp"
                               android:layout_height="20dp"/>
                       </LinearLayout>
                        <com.hedgehog.ratingbar.RatingBar
                            android:layout_marginTop="7dp"
                            android:id="@+id/rb_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:focusable="true"
                            hedgehog:clickable="true"
                            hedgehog:starCount="5"
                            hedgehog:starEmpty="@drawable/no_evaluation"
                            hedgehog:starFill="@drawable/evaluation"
                            hedgehog:starImageHeight="17dp"
                            hedgehog:starImagePadding="5dp"
                            hedgehog:starImageWidth="17dp" />
                    </LinearLayout>
                    <!--追加  电话-->
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="5dp"
                        android:layout_width="wrap_content"
                        android:gravity="bottom"
                        android:layout_height="46dp">
                        <ImageView
                            android:visibility="invisible"
                            android:id="@+id/iv_zjpm"
                            android:src="@drawable/ic_wyzj"
                            android:scaleType="fitCenter"
                            android:layout_width="60dp"
                            android:layout_height="18dp"/>
                        <ImageView
                            android:id="@+id/iv_phone"
                            android:layout_marginLeft="24dp"
                            android:src="@drawable/ic_phone"
                            android:scaleType="fitCenter"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                    </LinearLayout>

                </RelativeLayout>
                <!--评价-->
                <TextView
                    android:layout_marginTop="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:lineSpacingExtra="5dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="销售代理对您有进行以下指导吗？"
                    android:textColor="#ff323232"
                    android:textSize="18sp" />
               <androidx.recyclerview.widget.RecyclerView
                   android:layout_marginLeft="13dp"
                   android:layout_marginRight="13dp"
                   android:id="@+id/rv_comment_tm"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="“ 抱歉影响您的体验，微百姓将对销售代理进行管束 ”"
                    android:textColor="#ffeb5a3f"
                    android:layout_gravity="center_horizontal"
                    android:textSize="10sp" />

                <LinearLayout
                    android:id="@+id/ll_comment"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:padding="16dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/commert_bc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_comment"
                        android:hint="请您描述对销售代理不满意的地方？"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:lineSpacingExtra="5dp"
                        android:minHeight="80dp"
                        android:textColor="@color/no_selector_text_color"
                        android:gravity="start"
                        android:maxLength="150"
                        android:textColorHint="@color/et_hint_color"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_add_img"
                            android:src="@drawable/ic_add_img"
                            android:layout_width="70dp"
                            android:layout_gravity="bottom"
                            android:layout_height="70dp"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_marginLeft="10dp"
                            android:id="@+id/rv_comment_img"
                            android:layout_width="match_parent"
                            android:layout_height="78dp"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_zj_comment"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="19dp"
                        android:text="追加评论"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp"
                        android:padding="16dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/commert_bc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/et_comment_zj"
                            android:hint="请您描述对销售代理不满意的地方？"
                            android:layout_width="match_parent"
                            android:background="@null"
                            android:lineSpacingExtra="5dp"
                            android:minHeight="80dp"
                            android:gravity="start"
                            android:textColor="@color/no_selector_text_color"
                            android:maxLength="150"
                            android:textColorHint="@color/et_hint_color"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/iv_add_img_zj"
                                android:src="@drawable/ic_add_img"
                                android:layout_width="70dp"
                                android:layout_height="70dp"/>
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_marginLeft="10dp"
                                android:id="@+id/rv_comment_zj_img"
                                android:layout_width="wrap_content"
                                android:layout_height="70dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--提交评价-->
            <TextView
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:id="@+id/tv_submit"
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/submit_btn"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="提交评价"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>