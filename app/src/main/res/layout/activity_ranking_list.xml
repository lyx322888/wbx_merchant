<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RankingListActivity">
    <ImageView
        android:background="@drawable/bg_phb"
        android:layout_width="match_parent"
        android:layout_height="151dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="back">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_back_white"
                    android:tint="@color/colorWhite" />
            </RelativeLayout>

            <TextView
                android:id="@+id/title_name_tv"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:text="排行榜"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            app:cardElevation="7dp"
            android:translationZ="7dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="103dp">
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.wbx.merchant.widget.CircleImageView
                    android:id="@+id/civ_head"
                    android:layout_gravity="center_vertical"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <LinearLayout
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <FrameLayout
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:ellipsize="end"
                            android:maxLength="12"
                            android:maxLines="1"
                            android:textColor="#666666"
                            android:textSize="12sp" />
                        <TextView
                            android:layout_gravity="center_horizontal|bottom"
                            android:id="@+id/tv_pm"
                            android:textSize="12sp"
                            android:textColor="#999999"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:text="我的收入"
                            android:ellipsize="end"
                            android:layout_gravity="center_horizontal"
                            android:maxLength="12"
                            android:textColor="#666666"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_mysr"
                            android:textSize="20sp"
                            android:ellipsize="end"
                            android:maxLength="12"
                            tools:text="3550"
                            android:textStyle="bold"
                            android:textColor="@color/font_phb_s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:text="开店数量"
                            android:ellipsize="end"
                            android:layout_gravity="center_horizontal"
                            android:maxLength="12"
                            android:textColor="#666666"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_kds"
                            android:textSize="20sp"
                            android:ellipsize="end"
                            android:maxLength="12"
                            tools:text="3550"
                            android:textStyle="bold"
                            android:textColor="@color/font_phb_s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:translationZ="7dp"
            android:layout_marginLeft="20dp"
            app:cardElevation="7dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/font_phb_s"
                        android:text="排行"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="4.5"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/font_phb_s"
                        android:text="用户"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/font_phb_s"
                        android:text="收入"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/font_phb_s"
                        android:text="数量"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="20dp"
                    android:id="@+id/rv_phb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>