<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/error_refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_empty_find"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1254:1308"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />
    </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_find"
            android:layout_width="190dp"
            android:background="@drawable/submit_btn_3"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="发布商圈"
            android:textSize="17sp"
            android:textColor="@color/white"
            />
    <TextView
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_ts"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:text="提醒：发商圈功能为同城发布，同城的全部客户可以看到您发布的商圈资讯！"
        android:textColor="@color/app_color"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>