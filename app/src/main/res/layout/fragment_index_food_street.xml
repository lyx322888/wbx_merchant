<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="25dp"
        android:paddingBottom="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/page_background"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="12dp">

                <RelativeLayout
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="25dp">

                    <ImageView
                        android:id="@+id/chat_list_im"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_message"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/has_message_tv"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ova_bg_red"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="39dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rect_app_color_5dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/index_shop_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/attestation_state_tv"
                            android:layout_width="59dp"
                            android:layout_height="18dp"
                            android:background="@drawable/rect_solid_df4c4e_9dp"
                            android:gravity="center"
                            android:text="查看认证"
                            android:textColor="@color/white"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/show_open_state_tv"
                            android:layout_width="59dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="14dp"
                            android:background="@drawable/rect_solid_ffffff_9dp"
                            android:gravity="center"
                            android:text="营业中"
                            android:textColor="@color/app_color"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="我的余额"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="今日收入"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="昨日收入"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/balance_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="¥0.00"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/today_income_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="¥0.00"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/yesterday_income_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="¥0.00"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_award"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="85dp"
                            android:layout_height="23dp"
                            android:src="@drawable/ic_award" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:text="累计营业满3万"
                                    android:textColor="@color/white"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="10dp"
                                    android:text="自动返还480元软件费奖励"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <Button
                                android:id="@+id/bt_cash_withdrawal"
                                android:layout_width="90dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="20dp"
                                android:layout_marginStart="20dp"
                                android:background="@drawable/shape_button"
                                android:text="立即提现"
                                android:textColor="#00C5B7"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <com.wbx.merchant.widget.CustomizedProgressBar
                                android:id="@+id/customizedbar"
                                android:layout_width="200dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_customized"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2635"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/30000(元)"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <com.wbx.merchant.widget.CircleImageView
                    android:id="@+id/index_head_im"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"
                    android:elevation="10dp"
                    android:src="@drawable/logo" />

                <ImageView
                    android:id="@+id/iv_pub_bus_cir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="65dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_publish_business_circle" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_video_study"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/vidio_study" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_wait_send"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待发货"
                        android:textColor="#797979"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_wait_send_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="0"
                        android:textColor="@color/app_color"
                        android:textSize="19sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="#F2F3F4" />

                <LinearLayout
                    android:id="@+id/ll_wait_refund"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待退款"
                        android:textColor="#797979"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_wait_refund_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="0"
                        android:textColor="@color/app_color"
                        android:textSize="19sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_index_title"
                    android:gravity="center"
                    android:text="订单中心"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_send_order"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_send_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/icon_send_order"
                            android:drawablePadding="15dp"
                            android:text="外送订单"
                            android:textColor="#333333"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_send_order_num"
                            style="@style/badge_style"
                            android:layout_alignTop="@id/tv_send_order"
                            android:layout_alignRight="@id/tv_send_order"
                            android:text="1"
                            android:translationY="-5dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_scan_order"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_scan_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/icon_scan_order"
                            android:drawablePadding="15dp"
                            android:text="扫码订单"
                            android:textColor="#333333"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_scan_order_num"
                            style="@style/badge_style"
                            android:layout_alignTop="@id/tv_scan_order"
                            android:layout_alignRight="@id/tv_scan_order"
                            android:text="1"
                            android:translationY="-5dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_book_order"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_book_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/icon_book_order"
                            android:drawablePadding="15dp"
                            android:text="预定订单"
                            android:textColor="#333333"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_book_order_num"
                            style="@style/badge_style"
                            android:layout_alignTop="@id/tv_book_order"
                            android:layout_alignRight="@id/tv_book_order"
                            android:text="1"
                            android:translationY="-5dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_number_order"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_number_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/icon_number_order"
                            android:drawablePadding="15dp"
                            android:text="叫号订单"
                            android:textColor="#333333"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_number_order_num"
                            style="@style/badge_style"
                            android:layout_alignTop="@id/tv_number_order"
                            android:layout_alignRight="@id/tv_number_order"
                            android:text="1"
                            android:translationY="-5dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_index_title"
                    android:gravity="center"
                    android:text="管理中心"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_shop_manager"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/icon_shop_manager"
                            android:drawablePadding="13dp"
                            android:text="店铺管理"
                            android:textColor="#333333"
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_goods_manager"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_goods_manager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/icon_goods_manager"
                            android:drawablePadding="15dp"
                            android:text="商品管理"
                            android:textColor="#333333"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_goods_manager_num"
                            style="@style/badge_style"
                            android:layout_alignTop="@id/tv_goods_manager"
                            android:layout_alignRight="@id/tv_goods_manager"
                            android:text="1"
                            android:translationY="-5dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_business_manager"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/icon_business_manager"
                            android:drawablePadding="13dp"
                            android:text="营业管理"
                            android:textColor="#333333"
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_customer_manager"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/icon_customer_manager"
                            android:drawablePadding="13dp"
                            android:text="客户管理"
                            android:textColor="#333333"
                            android:textSize="11sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_notice_manager"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/icon_notice_manager"
                            android:drawablePadding="13dp"
                            android:text="公告管理"
                            android:textColor="#333333"
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_activity_manager"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/icon_activity_manager"
                            android:drawablePadding="13dp"
                            android:text="活动管理"
                            android:textColor="#333333"
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_inventory_manager"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/icon_inventory_manager"
                            android:drawablePadding="13dp"
                            android:text="库存管理"
                            android:textColor="#333333"
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_seat_manager"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/icon_seat_manager"
                            android:drawablePadding="13dp"
                            android:text="桌位管理"
                            android:textColor="#333333"
                            android:textSize="11sp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_index_title"
                    android:gravity="center"
                    android:text="收入中心"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_business_analyse"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/icon_business_analyse"
                            android:drawablePadding="13dp"
                            android:text="经营分析"
                            android:textColor="#333333"
                            android:textSize="11sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_merchant_withdraw"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/icon_merchant_withdraw"
                            android:drawablePadding="13dp"
                            android:text="商家提现"
                            android:textColor="#333333"
                            android:textSize="11sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_merchant_subsidy"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/icon_merchant_subsidy"
                            android:drawablePadding="13dp"
                            android:text="商家分红"
                            android:textColor="#333333"
                            android:textSize="11sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_intelligent_receive"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableTop="@drawable/icon_intelligent_receive"
                            android:drawablePadding="13dp"
                            android:text="智能付款"
                            android:textColor="#333333"
                            android:textSize="11sp" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_index_title"
                    android:gravity="center"
                    android:text="其他　　"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
